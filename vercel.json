{
  "version": 2,
  "builds": [
    {
      "src": "*.js",
      "use": "@vercel-node",
      "config": {
        "serverFiles": ["server-middleware/**"]
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "src/(.*)",
      "dest": "/",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ]
}
